#!/usr/bin/make -f

include /usr/share/dpkg/pkg-info.mk

%:
    dh $@ --with dkms

override_dh_install:
    dh_install src/* usr/src/hello-$(DEB_VERSION_UPSTREAM)/

override_dh_dkms:
    dh_dkms -- src/dkms.conf

override_dh_auto_clean:
    make -C src/ clean

override_dh_auto_build:

override_dh_auto_install: